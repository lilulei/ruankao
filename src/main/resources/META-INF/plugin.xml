<?xml version="1.0" encoding="UTF-8"?>
<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.lilulei.ruankao</id>
    <name>软考刷题助手</name>
    <vendor>lilulei</vendor>
    <description>软考备考刷题插件，提供历年真题练习、错题管理、学习统计等功能</description>
    <change-notes>Initial release of Soft Exam Practice Plugin</change-notes>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="SoftExamPractice"
                    anchor="right"
                    icon="/icons/exam.svg"
                    factoryClass="com.github.lilulei.ruankao.toolWindow.PracticeToolWindowFactory"/>
        
        <toolWindow id="WrongQuestions"
                    anchor="bottom"
                    secondary="true"
                    factoryClass="com.github.lilulei.ruankao.toolWindow.WrongQuestionsToolWindowFactory"/>
        
        <postStartupActivity implementation="com.github.lilulei.ruankao.startup.MyProjectActivity" />
        
        <!-- 注册新的服务 -->
        <service serviceInterface="com.github.lilulei.ruankao.services.KnowledgeChapterService" 
                 serviceImplementation="com.github.lilulei.ruankao.services.KnowledgeChapterService" 
                 serviceLevel="PROJECT"/>
    </extensions>
    
    <actions>
        <action id="OpenSoftExamPracticeToolWindow"
                class="com.github.lilulei.ruankao.actions.OpenPracticeWindowAction"
                text="Open Soft Exam Practice"
                description="Open Soft Exam Practice Tool Window">
            <add-to-group group-id="ToolsMenu" relative-to-action="Generate" anchor="after"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt Q"/>
        </action>
        
        <action id="OpenWrongQuestionsToolWindow"
                class="com.github.lilulei.ruankao.actions.OpenWrongQuestionsWindowAction"
                text="Open Wrong Questions"
                description="Open Wrong Questions Tool Window">
            <add-to-group group-id="ToolsMenu" relative-to-action="Generate" anchor="after"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt W"/>
        </action>
        
        <action id="ManageQuestionsAction"
                class="com.github.lilulei.ruankao.actions.ManageQuestionsAction"
                text="Manage Questions"
                description="Open comprehensive question management interface">
            <add-to-group group-id="ToolsMenu" relative-to-action="Generate" anchor="after"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt E"/>
        </action>
        
        <action id="ExportAction"
                class="com.github.lilulei.ruankao.actions.ExportAction"
                text="Export Data"
                description="Export practice records, wrong questions and learning statistics">
            <add-to-group group-id="ToolsMenu" relative-to-action="Generate" anchor="after"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt R"/>
        </action>
        
        <action id="ChangeIdentityAction"
                class="com.github.lilulei.ruankao.actions.ChangeIdentityAction"
                text="Change Exam Identity"
                description="Change your exam level and type">
            <add-to-group group-id="ToolsMenu" relative-to-action="Generate" anchor="after"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt A"/>
        </action>
        
        <action id="InitializeDataAction"
                class="com.github.lilulei.ruankao.actions.InitializeDataAction"
                text="Initialize Data"
                description="Clear learning statistics and wrong question data">
            <add-to-group group-id="ToolsMenu" relative-to-action="Generate" anchor="after"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt I"/>
        </action>
    </actions>
</idea-plugin>